<bottom>
  <container>

    <content class="col-xs-12 col-md-5">
      <logo>
        <a href="{{ site.history.logo.link|default(base_url) }}">
          <img
            src="{{ url('theme://images/logo.svg') }}"
            alt="{{ site.history.logo.alt|default(site.title|e('html')) }}">
        </a>
      </logo>
      {% if site.footer.description %}
        <p>{{ site.footer.description }}</p>
      {% endif %}
      {% block social %}
        {% include 'partials/social.html.twig' %}
      {% endblock %}
    </content>

    <content class="col-xs-6 col-sm-4 col-md-2">
      <h4>{{ site.footer.contact.title }}</h4>
      <p>
        {% for item in site.footer.contact.address %}
          <span>{{ item }}</span>
        {% endfor %}
      </p>
      <p>{{ site.footer.contact.email }}</p>
      <p><b>{{ site.footer.contact.gps }}</b></p>
    </content>

    <content class="col-xs-6 col-sm-4 col-md-2">
      <h4>{{ site.footer.quicklinks.title }}</h4>
      <ul class="quickmenu">
        {% for link in site.footer.quicklinks.links %}
          <li><a href="{% if "base_url:" in link.url %}{{ base_url_absolute }}/{{ link.url|replace({"base_url:": ""}) }}{% else %}{{ link.url }}{% endif %}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </content>

    <content class="col-xs-12 col-sm-4 col-md-3">
      <h4>{{ site.footer.newsletter.title }}</h4>
      <p>{{ site.footer.newsletter.description }}</p>

      <form action="https://feedburner.google.com/fb/a/mailverify" method="post" target="popupwindow" onsubmit="window.open('https://feedburner.google.com/fb/a/mailverify?uri={{ site.footer.newsletter.uri }}', 'popupwindow', 'scrollbars=no,width=550,height=520');return true" class="newsletter">
      <input type="email" name="email" placeholder="news@history.eu" required/>
      <input type="hidden" value="karolorzel" name="uri"/>
      <input type="hidden" name="loc" value="en_US"/>
      <button type="submit" class="btn"><icon class="ion ion-android-send"></icon></button>
      </form>
    </content>

  </container>
</bottom>
