<!DOCTYPE html>
<html class="no-js">
<head>
  {% block head %}
    <meta charset="utf-8">
    <title>{{ site.title|e('html') }}{% if header.title %} - {{ header.title|e('html') }}{% endif %}</title>
    {% include 'partials/metadata.html.twig' %}
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="icon" type="image/png" href="{{ url('theme://img/favicon.png') }}">

    <!-- Styles -->
    {% block stylesheets %}
      {% do assets.addCss('theme://css/bootstrap.min.css') %}
      {% do assets.add('theme://css/bootstrap.min.map') %}
      {% do assets.addCss('theme://css/ionicons.min.css') %}
      {% do assets.addCss('theme://css/style.css') %}
    {% endblock %}
    {{ assets.css() }}
  {% endblock %}
</head>
<body>
  {% block header %}
    {% include 'partials/header.html.twig' %}
  {% endblock %}

  {% block showcase %}
    {% include 'partials/showcase.html.twig' %}
  {% endblock %}

  {% block body %}
    {% block content %}{% endblock %}
  {% endblock %}

  {% block bottom %}
    {% include 'partials/bottom.html.twig' %}
  {% endblock %}

  {% block footer %}
    {% include 'partials/footer.html.twig' %}
  {% endblock %}

  {{ cookiespolicy_markup }}

  {% if site.history.progress.enabled %}
    <status>
      <div role="button" tabindex="0" aria-label="Loading images..." class="progress" data-progressbar-label="Loading images..."></div>
      <info>{{ site.history.progress.info }}</info>
    </status>
    {% do assets.addJs('theme://js/TweenMax.min.js') %}
    {% do assets.addJs('theme://js/elastic-progress.min.js') %}
    {% do assets.addJs('theme://js/imagesloaded.pkgd.min.js') %}
    {% do assets.addJs('theme://js/progress.min.js') %}
  {% endif %}

  <!-- Scripts -->
  {% block javascripts %}
    {% do assets.add('jquery',101) %}
    {% if browser.getBrowser == 'msie' and browser.getVersion <= 8 %}
      {% do assets.add('https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js') %}
      {% do assets.add('https://oss.maxcdn.com/respond/1.4.2/respond.min.js') %}
    {% endif %}
    {% do assets.addJs('theme://js/modernizr.min.js') %}
    {% do assets.addJs('theme://js/skrollr.min.js') %}
    {% do assets.addJs('theme://js/waypoints.min.js') %}
    {% do assets.addJs('theme://js/owl.carousel.min.js') %}
    {% do assets.addJs('theme://js/tweening-counter.min.js') %}
    {% do assets.addJs('theme://js/parallax.min.js') %}
    {% do assets.addJs('theme://js/navigation.min.js') %}
    {% do assets.addJs('theme://js/main.min.js') %}
  {% endblock %}
  {{ assets.js() }}
</body>
</html>
