{% embed 'partials/base.html.twig' %}
	{% set base_url = page.parent.url %}
	{% set feed_url = base_url %}

	{% if base_url == '/' %}
		{% set base_url = '' %}
	{% endif %}

	{% if base_url == base_url_relative %}
		{% set feed_url = base_url~'/'~page.parent.slug %}
	{% endif  %}

	{# Destroy showcase module cause we dont need it here #}
	{% block showcase %}{% endblock %}

	{% block content %}
		<main>
			<container-fluid>
				<{{ page.parent.header.kind }} class="single">
					{% include 'partials/' ~ page.parent.header.kind ~ '_item.html.twig' with {'truncate':false} %}
				</{{ page.parent.header.kind }}>
			</container-fluid>
		</main>
	{% endblock %}

{% endembed %}
