{% block content %}





<div class="modular-row mainimage">

	<div class="header-bkgd">
	
		<div class="wallpaper"></div>
		<div class="floorboard"></div>
		<div class="floor"></div>
		<img class="header-frame frame-ballerina" src="{{url('theme://images/frame-ballerinaback.png')}}">
		<img class="header-frame frame-frayed" src="{{url('theme://images/frame-frayed.png')}}">
		<img class="header-frame frame-girlsketch" src="{{url('theme://images/frame-girlsketch.png')}}">
